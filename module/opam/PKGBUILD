#!/bin/bash

pkgname=opam
pkgver=1.2.2
pkgdesc="OCaml Package Manager"
url="http://opam.ocaml.org"

packages=("ocamlfind" "zmq")

source=(https://raw.github.com/ocaml/opam/master/shell/opam_installer.sh)


package() {
  mkdir -p $pkgdir/usr/etc/bashrc.d/
  export OPAMROOT=\$qp_root/usr/local/opam
  echo "export OPAMROOT=$OPAMROOT" > $pkgdir/usr/etc/bashrc.d/opam
  source $pkgdir/usr/etc/bashrc.d/opam
  sh opam_installer.sh "$pkgdir/usr/bin"
  echo N | $pkgdir/usr/bin/opam config setup -a 
  $pkgdir/usr/bin/opam install ${packages[@]} -y 
}
